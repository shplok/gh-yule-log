#!/usr/bin/env bash
set -euo pipefail

# GitHub CLI extension entrypoint for `gh yule-log`
# This just runs the curses-based fire animation in fire.py.

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if ! command -v python3 >/dev/null 2>&1; then
	echo "python3 is required to run gh-yule-log" >&2
	exit 1
fi

exec python3 "${SCRIPT_DIR}/fire.py" "$@"
